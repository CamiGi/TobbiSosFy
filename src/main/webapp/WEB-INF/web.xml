<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>TobbiSosFy</display-name>
    <context-param>
        <param-name>dbUrl</param-name>
        <param-value>jdbc:mysql://localhost:3306/tobbisosfy_db?serverTimezone=UTC</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>MK00mysql00KM</param-value>
    </context-param>
    <context-param>
        <param-name>dbDriver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <filter>
        <filter-name>Gate</filter-name>
        <filter-class>it.polimi.tiw.tobbisosfy.filters.Gate</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Gate</filter-name>
        <url-pattern>/GoToHome</url-pattern>
        <url-pattern>/GoToPlaylist</url-pattern>
        <url-pattern>/StartPlayer</url-pattern>
        <url-pattern>/Logout</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>imagepath</param-name>
        <param-value>/resources/images</param-value>
    </context-param>
    <context-param>
        <param-name>trackpath</param-name>
        <param-value>/resources/tracks</param-value>
    </context-param>
</web-app>